function wechat_session_condition_status($openid, $status) {
  $wechat_session = wechat_session_load($openid);
  if (empty($wechat_session)) {
    return FALSE;
  }
  else {
    if ($wechat_session->status == $status) {
      return TRUE;
    }
  }
  return FALSE;
}

